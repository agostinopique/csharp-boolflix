@{
   Layout = "_EditorLayout";
}
@model List<Feature>;

<h1>Features</h1>

<h2>List</h2>

<a class="text-dark" asp-controller="Feature" asp-action="Create">Create a Feature</a>

@if(Model.Count() == 0){
    <div class="alert alert-primary" role="alert">
        <h2>Non sono presenti caratteristiche</h2>
    </div>
}
else
{

    <table class="table">
        <thead>
            <tr>
                <th class="col">#</th>
                <th class="col">Name</th>
                <th class="col">Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Feature feat in Model)
            {
                <tr>
                    <th scope="row">@feat.Id</th>
                    <td>@feat.Name</td>
                    <td>
                        <a class="btn btn-primary" href="@Url.Action("Edit", "Feature", new {id = feat.Id})">Modifica</a>
                        <form class="d-inline" asp-controller="Feature" asp-action="Delete" asp-route-id="@feat.Id" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger">Elimina</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
