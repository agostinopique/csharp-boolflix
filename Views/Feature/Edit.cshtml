@{
    Layout = "_EditorLayout";
    @model Feature
}

<h2>Edit your feature</h2>
<form asp-controller="Feature" asp-action="Update" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label for="name" class="form-label">Feature Name</label>
        <input class="form-control" id="name" asp-for="Name">
        <span class="text-danger" asp-validation-for="Name"></span>
        <span class="text-danger" asp-validation-for="Id"></span>
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
</form>